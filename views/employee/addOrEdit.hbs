<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
<table>
    <tbody>
        <tr>
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div>
        <td>
        <label>Full Name</label>
        </td>
        <td>
        <input type="text" name="fullName" placeholder="Full Name" value="{{employee.fullName}}">
        <div>
            {{employee.fullNameError}}</div>
        </td>
    </div>
    </tr>
    <div>
        <tr>
            <td>
        <label>Email</label>
        </td>
        <td>
        <input type="text" name="email" placeholder="Email" value="{{employee.email}}">
        <div>
            {{employee.emailError}}</div>
    </div>
        </td>
        </tr>
    <div >
        <div >
            <tr>
            <td>
            <label>Mobile</label>
            </td>
            <td>
            <input type="number" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
            </td>
            </tr>
        </div>
        <div >
            <tr>
            <td>
            <label>City</label>
            </td>
            <td>
            <input type="text" name="city" placeholder="City" value="{{employee.city}}">
            </td>
            </tr>
        </div>
    </div>
    <div >
        <tr>
            <td>
        <button type="submit" > Submit</button>
        </td>
            <td>
        <a href="/employee/list"> View All</a>
        </td>
            </tr>
    </div>
    </tbody>
    </table>
</form>